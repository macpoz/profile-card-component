@import url('https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@400;700&display=swap');

$font-kumbh = 'Kumbh Sans', sans-serif

$dark-cyan = hsl(185, 75%, 39%)
$very-dark-desaturated-blue = hsl(229, 23%, 23%)
$dark-grayish-blue = hsl(227, 10%, 46%)

$dark-gray = hsl(0, 0%, 59%)

$card-radius = 1rem

*
  margin 0
  padding 0
  font-family $font-kumbh

body
  height 100%
  background-color $dark-cyan
  background-image url("./images/bg-pattern-top.svg"), url("./images/bg-pattern-bottom.svg")
  background-position: left -765px top -600px, right -745px bottom -605px
  background-repeat no-repeat
  background-attachment fixed
  @media(min-width 450px)
    background-position: left -300px top -478px, right -224px bottom -640px

.container
  height 100vh
  display flex
  justify-content center
  align-items center
  flex-direction column

.card
  box-shadow 0 15px 25px 0 rgba($very-dark-desaturated-blue,.2)
  border none
  border-radius $card-radius
  margin 1.5rem
  display flex
  flex-direction column
  align-items center
  background-color white

  header
    background-image url("./images/bg-pattern-card.svg")
    background-position top
    background-repeat no-repeat
    border-top-left-radius $card-radius
    border-top-right-radius $card-radius

    img
      border 5px solid white
      border-radius 10rem
      margin 5.5rem 6.9rem 1rem;
      @media(min-width 450px)
        margin 5.5rem 7.5rem 1rem;

  main
    display flex
    flex-direction column
    justify-content center
    align-items center
    margin-bottom 1.5rem
    width 100%

    .info
      display flex
      align-items baseline
      margin-bottom .5rem

      h1
        font-size 18px
        margin-right .5rem
        font-weight 700
      span
        color $dark-grayish-blue
        font-size 18px

    > span
        color $dark-grayish-blue
        font-size 14px


  footer
    border-top 1px solid rgba($dark-grayish-blue,0.15)
    display flex
    justify-content center
    width 100%
    > div
      display flex
      justify-content space-evenly
      width 90%
      padding 1.5rem 0
      @media(min-width 450px)
        justify-content space-evenly

      > div
        display flex
        flex-direction column
        justify-content center
        align-items center
        > span:first-of-type
          font-size 18px
          font-weight 700
          margin-bottom .2rem
        > span:last-of-type
          font-size 10px
          letter-spacing 0.15em
          color $dark-grayish-blue